{
    "compilerOptions": {
        "lib": ["ES5", "es2015"],
        "types": ["node"],
        "target": "ES5",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist",
        "declarationDir": "dist",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": false,
        "noImplicitOverride": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    },
    "exclude": [
        "tests", // Add this line to exclude the "tests" directory from the build output
        "dist",
        "node_modules"
    ]
}